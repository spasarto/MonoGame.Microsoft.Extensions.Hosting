<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0-windows7.0</TargetFramework>
    <Version>5.0.0.1</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>Adds a MonoGame lifetime to the Microsoft.Extensions.Hosting framework.

Usage:
new HostBuilder().RunMonoGameAsync&lt;MyGame&gt;();</Description>
    <Authors>Adam Johnson</Authors>
    <Company />
    <PackageId>MonoGame.Microsoft.Extensions.Hosting</PackageId>
    <PackageTags>MonoGame Hosting</PackageTags>
    <Product>MonoGame.Microsoft.Extensions.Hosting</Product>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="5.0.0" />
    <PackageReference Include="MonoGame.Framework.WindowsDX" Version="3.8.0.1641" />
  </ItemGroup>

</Project>
